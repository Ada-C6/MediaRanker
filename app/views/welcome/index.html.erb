  <h1>Top Books</h1>

  <ol>
    <% @books.each do |book| %>
    <li>
      <h2><%= book.name %></h2>
      <small><%= book.upvotes %></small>
    </li>

    <% end  %>
  </ol>
</section>

<section>
  <h1>Top Albums</h1>

  <ol>
    <% @albums.each do |album| %>
    <li>
      <h2><%= album.name %></h2>
      <small><%= album.upvotes %></small>
    </li>

    <% end  %>
  </ol>
</section>
