<%= form_for @album,
  url: action_name do |f| %>
<ul>
  <li><%= f.label :title %></li>
  <li><%= f.text_field :title %></li>

  <li><%= f.label :recorded_by %></li>
  <li><%= f.text_field :recorded_by %></li>

  <li><%= f.label :description %></li>
  <li><%= f.text_area :description %></li>

  <li><%= f.submit class: 'button' %> </li>
</ul>

<% end %>
