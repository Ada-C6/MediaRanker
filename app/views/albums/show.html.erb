<h2><%= @album.name %></h2>

<p>Recorded by: <%= @album.artist %></p>

<p>Ranked: <%= @album.ranked %></p>

<p>Description: <%= @album.description %></p>

<p><%= button_to "Upvote", upvote_album_path(@album.id), :method => :patch %></p>

<ul>
  <li><%= link_to "Edit '#{@album.name}'", edit_album_path(@album.id) %></li>
  <li><%= link_to "Delete", album_path(@album.id), method: :delete, data: { confirm: "Are you sure you want to delete?"} %></li>
  <li><%= link_to "View All Albums", albums_path %></li>
  <li><%= link_to "View All Media", home_path %></li>
</ul>
