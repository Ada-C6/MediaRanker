<section>
  <h2><%= @album.title %></h2>
  <h4><%= "Artist: #{@album.artist}" %></h4>

  <p><%= "Ranked: #{@album.rank }"%><p>

  <p><%= @album.synopsis %></p>

<section class="buttons">
  <%= button_to "Upvote", upvote_albums_path(id: @album.id), method: :patch, class: 'btn' %>

  <%= button_to "Edit '#{@album.title}'", edit_albums_path(album_id: @album.id), method: :get, class: 'btn' %>

  <%= button_to "Delete", delete_albums_path(album_id: @album.id), method: :delete, data: { confirm: "Are you sure you want to delete this album? This action cannot be undone." } %>

  <%= button_to "View All Albums", index_albums_path, method: :get %>

  <%= button_to "View All Media", root_path, method: :get %>
</section>
