<h2><%= @album.name %></h2>

<ul>
  <li>Artist: <%= @album.artist %></li>
  <li>Description: <%= @album.description %></li>
  <li>Upvotes: <%= ranking(@album) %></li>
</ul>

<%= link_to :upvote, upvote_album_path(@album), method: "patch" %>

<%= link_to "Edit #{@album.name}", edit_album_path %>
<%= link_to "DELETE", album_path,
            method: "delete",
            data: { confirm: "Are you sure you want to delete this album?" } %>

<%= link_to "All Albums", albums_path %>
<%= link_to "All Media", root_path %>
