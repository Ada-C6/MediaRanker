<h1>Albums#show</h1>
<p>Find me in app/views/albums/show.html.erb</p>

<article>
  <h1><%= @album.name %></h1>
  <p>
    directed by: <%= @album.artist %>
  </p>
  <p>
    ranked: <%= @album.votes %>
  </p>
  <p>
    <%= @album.description %>
  </p>
  <p>
    <%= button_to 'upvote', {action: "update", id: album.id }, method: :patch %>
  </p>
  <p>
    <%= link_to 'edit', edit_album_path %>
  </p>
  <p>
    <%= button_to 'delete', {action: "destroy", id: album.id }, method: :delete, data: {confirm: "Are you sure?"} %>
  </p>
  <p>
    <%= link_to 'view all', albums_path %>
  </p>
  <p>
    <%= link_to 'Media Ranker', mediaranker_index_path %>
  </p>
</article>
