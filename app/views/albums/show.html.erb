<h1><%= @album.name %></h1>
<p><%= "Recorded by: #{ @album.artist }" %></p>
<p><%= "Ranked: #{ @album.ranking }" %></p>
<p><%= "Description: #{ @album.description }" %></p>
<p><%= link_to "Upvote", upvote_album_path(@album), method: :patch %></p>
<p><%= link_to "Edit", edit_album_path(@album) %></p>
<p><%= link_to "Delete", album_path(@album), method: :delete, data: { confirm: "Are you sure you want to delete this album?" } %></p>
<p><%= link_to "View All Albums", albums_path %></p>
<p><%= link_to "View All Media", root_path %></p>
