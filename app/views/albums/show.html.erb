<article class="show_media">
  <h1><%= @album.name %></h1>
  <p><%= "Recorded by: #{ @album.artist }" %></p>
  <p><%= "Ranked: #{ @album.ranking }" %></p>
  <p><%= "Description: #{ @album.description }" %></p>

  <section>
    <div class="button upvote"><%= link_to "Upvote", upvote_album_path(@album), method: :patch %></div>
    <div class="button"><%= link_to "Edit", edit_album_path(@album) %></div>
    <div class="button delete"><%= link_to "Delete", album_path(@album), method: :delete, data: { confirm: "Are you sure you want to delete this album?" } %></div>
  </section>

  <section>
    <div class="button"><%= link_to "View All Albums", albums_path %></div>
    <div class="button"><%= link_to "View All Media", root_path %></div>
  </section>
</article>
