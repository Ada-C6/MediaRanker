<main>
  <article class="row">
    <p id="title" class="small-4 columns">Title: <%= @album.title %></p>
    <p id="creator" class="small-4 columns">Artist: <%= @album.artist %></p>
    <p class="small-12 columns">Votes: <%= @album.rank %></p>
    <p class="small-12 columns">Description: <%= @album.description %></p>
    <p class="small-12 columns"><%= link_to("Upvote", album_upvote_path, class: "small warning button", method: :patch) %></p>
  </article>

  <nav class="row small-up-7">
    <p class="column"><%= link_to("Edit this album", edit_album_path, class: "hollow button", method: :get) %></p>
    <p class="column"><%= link_to("Delete this album", album_path, class: "hollow button", method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %></p>
    <p class="column"><%= link_to("View all albums", albums_path, class: "hollow button", method: :get) %></p>
    <p class="column"><%= link_to("View all media", root_path, class: "hollow button", method: :get) %></p>
  </nav>
</main>
