<%= render partial: "layouts/media_info", locals: { media: @album } %>

<p>
  <%= button_to "Upvote", upvote_album_path(@album), method: :patch %>
</p>
<p>
  <%= button_to "Edit Album", edit_album_path(@album), method: :get %>
</p>
<p>
  <%= button_to "Delete Album", album_path(@album), method: :delete, data: {confirm: "Are you sure you want to delete this album?"} %>
</p>


