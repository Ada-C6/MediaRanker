<main>
  <article class="row">
    <p class="small-4 columns">Title: <%= @album.title %></p>
    <p class="small-4 columns">Artist: <%= @album.artist %></p>
    <p class="small-12 columns">Rank: <%= @album.rank %></p>
    <p class="small-12 columns">Description: <%= @album.description %></p>
    <p class="small-12 columns"><%= button_to("Upvote", album_upvote_path, method: :patch) %></p>
  </article>

  <nav class="row">
    <p><%= button_to("Edit this album", edit_album_path, method: :get) %></p>
    <p><%= button_to("Delete this album", album_path, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %></p>
    <p><%= button_to("View all albums", albums_path, method: :get) %></p>
    <p><%= button_to("View all media", root_path, method: :get) %></p>
  </nav>
</main>
