<p>Title: <%= @album.title %></p>
<p>Artist: <%= @album.artist %></p>
<p>Rank: <%= @album.rank %></p>
<p>Description: <%= @album.description %></p>

<%= button_to("Edit this album", edit_album_path, method: :get) %>
<%= button_to("Upvote", album_upvote_path, method: :patch) %>
<%= button_to("Delete this album", album_path, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %>
<%= button_to("View all albums", albums_path, method: :get) %>
<%= button_to("View all media", root_path, method: :get) %>
