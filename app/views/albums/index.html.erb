<table class="index_table">
    <tr>
        <th>Votes</th>
        <th>Album Name</th>
        <th>Upvote</th>
    </tr>

    <% @albums.each do |album| %>
    <tr>
        <td align=center><%= "#{ album.votes }" %></td>
        <td align=center><%= link_to "#{ album.name }", album_path(album) %></td>
        <td align=center><%= button_to("upvote", album_upvote_path(album), method: :patch) %></td>
    </tr>
    <% end %>
</table>



<%= link_to("View All Media", root_path, class: "button") %>

<%= link_to("Add an Album", new_album_path, class: "button") %>
