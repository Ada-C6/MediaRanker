<table>
  <thead>
    <tr>
      <th scope="col">Ranking</th>
      <th scope="col">Album</th>
      <th scope="col">Upvote</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.sort_by_rank.each do |album| %>
    <tr>

      <td>
        Ranked: <%= ranking(album) %>
      </td>

      <td scope="row">
        <%= link_to "#{album.name}", album_path(album) %>
      </td>


      <td>
        <%= link_to "Upvote", upvote_album_path(album), method: "patch" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "All Media", root_path %>
  <%= link_to "Add New Album", new_album_path %>
</p>
