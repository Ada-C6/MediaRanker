<h1>Albums</h1>
<table>
	<tbody>
		<tr>
			<th>Ranking</th>
			<th>Name</th>
			<th>Upvote</th>
			<th>Downvote</th>
		</tr>
		<% @all_albums.each do |album|%>
		<tr>
			<td>Rank: <%=album.rank%></td>
			<td><%=link_to album.name, album_path(album)%></td>
			<td><%= button_to("Upvote", {action: "upvote", id: album.id}, {method: :patch, :class=> "success button"}) %></td>
			<td><%= button_to("Downvote", {action: "downvote", id: album.id}, {method: :patch, :class=> "alert button"}) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= button_to("View All Media", media_path, {method: :get, :class=>"button"} ) %>
<%= button_to("Add an Album", new_album_path, {method: :get, :class=>"button"}) %>
