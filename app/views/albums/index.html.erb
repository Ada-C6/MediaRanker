<main>
  <table>
    <thead>
      <tr>
        <th scope="col">Ranking</th>
        <th scope="col">Album</th>
        <th scope="col">Upvote</th>
      </tr>
    </thead>

    <tbody>
      <% @albums.each do |album| %>
      <tr>

        <td>
          <%= ranking(album) %>
        </td>

        <td scope="row">
          <%= link_to "#{album.name}", album_path(album) %>
        </td>


        <td>
          <%= link_to "Upvote", upvote_album_path(album), method: "patch", class: "small success button" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</main>

<footer>
  <ul class="menu row">
    <li class="small-10 medium-5 large-5 columns"><%= link_to "Add New Album", new_album_path, class: "button" %></li>
    <li class="small-10 medium-5 large-5 end columns"><%= link_to "All Media", root_path, class: "secondary button" %></li>
  </ul>
</footer>
