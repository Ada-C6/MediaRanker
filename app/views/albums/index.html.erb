<section class="hero hero2">
       <a name="top-albums"></a>
        <div class="wrapper row">
          <div class="small-10 medium-6 large-3 columns" class="info">
            <h1> Top Albums </h1>
            <p>
              Swag pork belly brunch gluten-free kinfolk before they sold out asymmetrical. Thundercats pug poke, cornhole subway tile skateboard tote bag seitan. Before they sold out artisan vegan, raclette roof party iceland viral 8-bit. Intelligentsia yr 3 wolf moon +1 helvetica
            </p>
          </div>
        </div>
</section>

<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>

<% @albums.each do |album| %>

  <tr>
    <td>Ranked: <%= album.ranked %></td>
    <td><%= link_to(album.title, album_path(album.id)) %></td>
    <td><%= button_to "Upvote", album_path(album.id), method: :get %></td>
  </tr>
<% end %>
</table>

<ul>
  <li><%= button_to 'Add an Album', new_album_path, method: :get %> </li>
</ul>
