<h2>Albums Index</h2>

<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>

  <% @albums.each do |album| %>
  <tr>
    <td>Ranked: <%= album.ranked %></td>
    <td><%= link_to "#{album.name}", album_path(album.id)%></td>
    <td><%= button_to "Upvote", upvote_album_path(album.id), :method => :patch %></td>
  </tr>
  <% end %>
</table>

<ul>
  <li><%= link_to "View All Media", home_path %></li>
  <li><%= link_to "Add an Album", new_album_path %></li>
</ul>
