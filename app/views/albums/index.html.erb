<main>
  <table>
    <thead>
      <tr>
        <th scope="col">Ranking</th>
        <th scope="col">Album</th>
        <th scope="col">Upvote</th>
      </tr>
    </thead>

    <tbody>
      <% @albums.sort_by_rank.each do |album| %>
      <tr>

        <td>
          Ranked: <%= ranking(album) %>
        </td>

        <td scope="row">
          <%= link_to "#{album.name}", album_path(album) %>
        </td>


        <td>
          <%= link_to "Upvote", upvote_album_path(album), method: "patch" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</main>

<footer class="small-12 large-12 columns">
  <ul class="menu row small-up-1 medium-up-3 large-up-6">
    <li class="column"><%= link_to "All Media", root_path, class: "secondary button" %></li>
    <li class="column"><%= link_to "Add New Album", new_album_path, class: "button" %></li>
  </ul>
</footer>
