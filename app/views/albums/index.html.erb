<table class="index_table">
 <tr>
   <th>Ranking</th>
   <th>Album Name</th>
   <th>Upvote</th>
 </tr>
 <% @albums.each do |album| %>
 <tr>
   <td><%= "#{ album.rank }" %></td>
   <td><%= link_to "#{ album.name }", album_path(album) %></td>
   <td><%= button_to("upvote", album_upvote_path(album.id), method: :patch) %></td>
 </tr>
 <% end %>
</table>



<%= link_to("View All Media", root_path, class: "button") %>

<%= link_to("Add an album", new_album_path, class: "button") %>
