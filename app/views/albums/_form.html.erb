<% if @album.errors.any? %>
  <ul class="errors">
    <% @album.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @album, method: http_method do |f| %>
  <p>
    <%= f.label :name %>:
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :artist %>:
    <%= f.text_field :artist %>
  </p>

  <p>
    <%= f.label :description %>:
    <%= f.text_field :description %>
  </p>

  <%= f.submit "Submit" %>
<% end %>

<p>
  <%= link_to "Back to All Movies", albums_path %>
</p>
