<div class="row">
  <div class="column">
    <h2>Add a new album</h2>
  </div>
</div>

<article>

  <% if @album.errors.any? %>
    <section class = "errors row">
      <div class = "column">
        <p>Whoops! We couldn't save your album because:</p>
        <ul>
          <% @album.errors.each do |column, message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
        <p>Please edit your entries and try again.</p>
      </div>
    </section>
  <% end %>

  <section class = "row">
    <div class = "column">
      <%= form_for @album, url: albums_create_path, method: :post do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :artist %>
        <%= f.text_field :artist %>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.submit %>

      <% end %>
    </div>
  </section>

</article>
