<h2>Add a New Album</h2>

<%= form_for @new_item, :url => { method: :post} do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :artist %>
<%= f.text_field :artist %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.hidden_field :rank, :value => 0 %>

  <%= f.submit "Submit" %>
<% end %>
