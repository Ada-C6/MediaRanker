<h2>Add a new album</h2>

<section>
  <%= form_for @album, url: albums_create_path, method: :post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :artist %>
    <%= f.text_field :artist %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>

  <% end %>
</section>
