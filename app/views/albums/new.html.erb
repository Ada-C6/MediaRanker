<h1>Add a New Album</h1>

<div class="form-new">
<%= form_for (@album) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name%>
    <p></p>
    <%= f.label :artist %>
    <%= f.text_field :artist%>
    <p></p>
    <%= f.label :description %>
    <%= f.text_area :description%>
    <p></p>

    <%= f.submit %>
  <%end%>
</div>
