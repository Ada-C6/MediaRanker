<section class="row small-up-1 medium-up-3 large-up-3">
  <table class="column">
    <th>
      <td colspan="3">Top Movies</td>
    </th>
    <% @top_movies.each do |movie| %>
    <tr>
      <td>Rank: <%=movie.rank %></td>
      <td><%= movie.title %></td>
      <td><%= button_to "Upvote", upvote_movie_path(movie), method: :patch %></td>
    </tr>
    <% end %>
  </table>

  <table class="column">
    <th>
      <td colspan="3">Top Books</td>
    </th>
    <% @top_books.each do |book| %>
    <tr>
      <td>Rank: <%=book.rank %></td>
      <td><%= book.title %></td>
    </tr>
    <% end %>
  </table>

  <table class="column">
    <th>
      <td colspan="3">Top Albums</td>
    </th>
    <% @top_albums.each do |album| %>
    <tr>
      <td>Rank: <%=album.rank %></td>
      <td><%= album.title %></td>
    </tr>
    <% end %>
  </table>
</section>
