<section>
  <h1>Edit Movie</h1>
  <%= form_for @movie do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit "Save" %>

  <% end %>

</section>
