<h2>Edit a movie</h2>

<section>
  <%= form_for @movie, url: movies_update_path, method: :put do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>

  <% end %>
</section>
