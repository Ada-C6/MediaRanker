<h2>Edit Movie</h2>

<%= form_for @movie, method: :patch do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :director %>
  <%= f.text_field :director %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.label "Save" %>
  <%= f.submit "Submit" %></p>
<% end %>
