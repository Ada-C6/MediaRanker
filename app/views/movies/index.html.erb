
<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>

  <% @movies.each do |movie| %>
  <tr>
    <td>
      Ranked: <%= movie.num_votes %>
    </td>
    <td>
      <%= link_to movie.title, {action: 'show', id: movie}, method: :get %>
    </td>
    <td>
      <%= button_to "Upvote", movie_upvote_path(movie.id), method: :patch %>
    </td>
  </tr>
  <% end %>
</table>

<%= button_to "View All Media", root_path, method: :get %>
<%= button_to "Add Movie", new_movie_path, method: :get %>
