<table class="index_table">
    <tr>
        <th>Votes</th>
        <th>Movie Name</th>
        <th>Upvote</th>
    </tr>

    <% @movies.each do |movie| %>
    <tr>
        <td><%= "#{ movie.votes }" %></td>
        <td><%= link_to "#{ movie.name }", movie_path(movie) %></td>
        <td><%= button_to("upvote", movie_upvote_path(movie), method: :patch) %></td>
    </tr>
    <% end %>
</table>



<%= link_to("View All Media", root_path, class: "button") %>

<%= link_to("Add a Movie", new_movie_path, class: "button") %>
