<h2>Movies Index</h2>

<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote  </th>
  </tr>

  <% @movies.each do |movie| %>
  <tr>
    <td>Ranked: <%= movie.ranked %></td>
    <td><%= link_to "#{movie.name}", movie_path(movie.id) %></td>
    <td><%= button_to "Upvote", upvote_movie_path(movie.id), :method => :patch %></td>
  </tr>
  <% end %>
</table>

<ul>
  <li><%= link_to "View All Media", home_path %></li>
  <li><%= link_to "Add a Movie", new_movie_path %></li>
</ul>
