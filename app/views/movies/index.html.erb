<table>
  <thead>
    <tr>
      <th scope="col">Ranking</th>
      <th scope="col">Movie</th>
      <th scope="col">Upvote</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.sort_by_rank.each do |movie| %>
    <tr>

      <td>
        Ranked: <%= ranking(movie) %>
      </td>

      <td scope="row">
        <%= link_to "#{movie.name}", movie_path(movie) %>
      </td>


      <td>
        <%= link_to :upvote, upvote_movie_path(movie), method: "patch" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "All Media", root_path %>
  <%= link_to "Add New Movie", new_movie_path %>
</p>
