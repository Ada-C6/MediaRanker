<main>

  <table>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr>

    <% @movies.each do |movie| %>
    <tr>
      <td>
        <%= movie.score %>
      </td>
      <td>
        <%= movie.name %>
      </td>
      <td>
        <%= button_to "Upvote", upvote_movie_path(movie), method: :patch %>
      </td>
    </tr>
    <% end %>

  </table>

</main>
