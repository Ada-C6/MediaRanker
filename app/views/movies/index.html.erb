<h1>ALL the movies shall live here...</h1>
<p>Find me in app/views/movies/index.html.erb</p>
  <h1>Top Movies/All Movies</h1>
  <table>
    <tr>
      <th>votes</th>
      <th>name</th>
      <th>Upvote</th>
    </tr>
    <% @movies.each do |movie| %>
    <tr>
      <td>Ranked: <%=movie.vote_count %></td>
      <td><%=link_to movie.name, movie_path(movie.id) %></td>
      <td><%=button_to("Upvote", movies_upvote_path(movie.id), method: :patch) %></td>
    </tr>
    <% end %>
  <p><%=button_to("Add Movie", new_movie_path, method: :get)%></p>
</table>
