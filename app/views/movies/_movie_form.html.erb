<% if @movie.errors.any? %>
  <ul class="error">
    <% @movie.errors.each do |error, message| %>
    <li><strong><%= error.upcase %></strong><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @movie, url: path, method: http_method do |f| %>
<table>
  <tr>
    <td><%= f.label :name %> </td>
    <td><%= f.text_field :name, :size => 100 %> </td>
  </tr>

  <tr>
    <td><%= f.label :director %></td>
    <td><%= f.text_field :director %></td>
  </tr>

  <tr>
    <td><%= f.label :description %></td>
    <td><%= f.text_field :description %></td>
  </tr>

  <tr>
    <td><%= f.submit "Create Movie" %></td>
  </tr>
</table>
<% end %>
