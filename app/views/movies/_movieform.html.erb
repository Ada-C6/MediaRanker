<h5 class="error-message"><%= @error if @error %></h5>
<%= form_for @mymovie,
  method: @post_method,
  url: @post_path do |f| %>
  <div class="form_attribute">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form_attribute">
    <%= f.label :director %>
    <%= f.text_field :director %>
  </div>
  <div class="form_attribute">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <div class="form_attribute">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form_attribute">
    <%= f.submit %>
  </div>
<% end %>
