<div class="row">
  <section>
    <h2><%= @movie.title %></h2>
    <h4><%= "Year: #{@movie.year}" %></h4>

    <p><%= "Ranked: #{@movie.rank }"%><p>

    <p><%= @movie.synopsis %></p>
  </section>

  <section>
    <%= button_to "Upvote", upvote_movies_path(id: @movie.id), method: :patch, class: 'button radius' %>
  </section>

    <%= button_to "Edit '#{@movie.title}'", edit_movies_path(movie_id: @movie.id), method: :get, class: 'button secondary' %>

    <%= button_to "Delete", delete_movies_path(movie_id: @movie.id), method: :delete, class: 'button alert', data: { confirm: "Are you sure you want to delete this album? This action cannot be undone." } %>

    <%= button_to "View All Movies", index_movies_path, method: :get, class: 'button secondary' %>
    <%= button_to "View All Media", root_path, method: :get, class: 'button secondary' %>
</div>
