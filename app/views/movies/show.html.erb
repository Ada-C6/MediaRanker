<article class="show_media">
  <h1><%= @movie.name %></h1>
  <p><%= "Directed by: #{ @movie.director }" %></p>
  <p><%= "Ranked: #{ @movie.ranking }" %></p>
  <p><%= "Description: #{ @movie.description }" %></p>

  <section>
    <div class="button upvote"><%= link_to "Upvote", upvote_movie_path(@movie), method: :patch %></div>
    <div class="button"><%= link_to "Edit", edit_movie_path(@movie) %></div>
    <div class="button delete"><%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: "Are you sure you want to delete this movie?" } %></div>
  </section>

  <section>
    <div class="button"><%= link_to "View All Movies", movies_path %></div>
    <div class="button"><%= link_to "View All Media", root_path %></div>
  </section>
</article>
