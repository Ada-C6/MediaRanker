<h3><%= "#{@movie.title}" %></h3>
<h4><%= "Directed by #{@movie.director}" %></h4>
<p>
  <%= "#{@movie.description}" %>
</p>
<p>
  <%= "Ranked: #{@movie.vote}" %>
</p>


<%= form_for @movie, method: :patch do |f|%>
  <%= f.hidden_field :vote, :value => @movie.upvote %>
  <%= f.submit "Upvote!" %>
<% end %>
<div class="row">
<p class="column small-12 medium-2 large-2">
<%= link_to "Edit Movie", edit_movie_path %>
</p>
<p class="column small-12 medium-2 large-2">
<%= link_to "Delete this movie!", movie_path(@movie), :method =>'delete', data: { confirm: "Are you really sure?"} %>
</p>
<p class="column small-12 medium-2 large-2">
<%= link_to "Home", root_path %>
</p>
<p class="column small-12 medium-2 large-2 end">
<%= link_to "All Movies", movies_path %>
</p>
</div>
