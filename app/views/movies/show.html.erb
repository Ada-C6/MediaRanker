<main>
  <article class="row">
    <p id="title" class="small-4 columns">Title: <%= @movie.title %></p>
    <p id="creator" class="small-4 columns">Directed by: <%= @movie.director %></p>
    <p class="small-12 columns">Votes: <%= @movie.rank %></p>
    <p class="small-12 columns">Description: <%= @movie.description %></p>
    <p class="small-12 columns"><%= link_to("Upvote", movie_upvote_path, class: "small warning button", method: :patch) %></p>
  </article>

  <nav class="row small-up-7">
    <p class="column"><%= link_to("Edit this movie", edit_movie_path, class: "hollow button", method: :get) %></p>
    <p class="column"><%= link_to("Delete this movie", movie_path, class: "hollow button", method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %></p>
    <p class="column"><%= link_to("View all movies", movies_path, class: "hollow button", method: :get) %></p>
    <p class="column"><%= link_to("View all media", root_path, class: "hollow button", method: :get) %></p>
  </nav>
</main>
