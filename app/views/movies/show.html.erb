<p>Title: <%= @movie.title %></p>
<p>Directed by: <%= @movie.director %></p>
<p>Rank: <%= @movie.rank %></p>
<p>Description: <%= @movie.description %></p>

<%= button_to("Edit this movie", edit_movie_path, method: :get) %>
<%= button_to("Upvote", movie_upvote_path, method: :patch) %>
<%= button_to("Delete this movie", movie_path, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %>
<%= button_to("View all movies", movies_path, method: :get) %>
<%= button_to("View all media", root_path, method: :get) %>
