<section>
  <h2><%= @movie.title %></h2>
  <h4><%= "Year: #{@movie.year}" %></h4>

  <p><%= "Ranked: #{@movie.rank }"%><p>

  <p><%= @movie.synopsis %></p>

<section class="buttons">
  <%= button_to "Upvote", upvote_movies_path(id: @movie.id), method: :patch, class: 'btn' %>

  <%= button_to "Edit '#{@movie.title}'", edit_movies_path(movie_id: @movie.id), method: :get, class: 'btn' %>

  <%= button_to "Delete", delete_movies_path(movie_id: @movie.id), method: :delete, data: { confirm: "Are you sure you want to delete this album? This action cannot be undone." } %>

  <%= button_to "View All Movies", index_movies_path, method: :get %>

  <%= button_to "View All Media", root_path, method: :get %>
</section>
