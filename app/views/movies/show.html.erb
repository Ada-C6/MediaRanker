<%= render partial: 'layouts/show', locals: { media: @movie } %>

<section class='row small-up-2 large-up-4'>

<%= link_to "View all Movies", movies_path, class: 'column button'  %>
<%= link_to "View all Media", root_path, class: 'column button' %>
<%= link_to "Edit #{@movie.name}", edit_movie_path(@movie), class: 'column button' %>
<%= link_to "DELETE", movie_path(@movie),
  class: 'column button button-danger',
  method: :delete,
  data: {confirm: "Are you sure?"} %>
</section>
