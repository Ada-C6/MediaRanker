<h1><%= @movie.title %></h1>
<h3>Directed by: <%= @movie.director %></h3>
<p><%= @movie.description %></p>
<p>Ranked: <%= @movie.rank %></p>

<%= link_to 'Edit Movie', movie_edit_path(@movie.id) %>
<%= button_to "Delete Movie", movie_delete_path(@movie.id), method: :delete, data: {confirm:"Are you Sure?" }  %>

