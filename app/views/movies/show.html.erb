<main>
  <article class="row">
    <p class="small-4 columns">Title: <%= @movie.title %></p>
    <p class="small-4 columns">Directed by: <%= @movie.director %></p>
    <p class="small-12 columns">Rank: <%= @movie.rank %></p>
    <p class="small-12 columns">Description: <%= @movie.description %></p>
    <p class="small-12 columns"><%= button_to("Upvote", movie_upvote_path, method: :patch) %></p>
  </article>

  <nav class="row">
    <p><%= button_to("Edit this movie", edit_movie_path, method: :get) %></p>
    <p><%= button_to("Delete this movie", movie_path, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }) %></p>
    <p><%= button_to("View all movies", movies_path, method: :get) %></p>
    <p><%= button_to("View all media", root_path, method: :get) %></p>
  </nav>
</main>
