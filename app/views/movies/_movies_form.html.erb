<%= form_for @movie do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :director %>
  <%= f.text_field :director %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.submit "Save", class: "button secondary radius" %></p>
<% end %>
