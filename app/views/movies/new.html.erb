<h2>Add a new movie</h2>

<section>
  <%= form_for @movie, url: movies_create_path, method: :post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>

  <% end %>
</section>
