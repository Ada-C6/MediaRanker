<h2>Add a new movie</h2>

<article>
  <% if @movie.errors.any? %>
    <section class = "errors">
      <p>Whoops! We couldn't save your movie because:</p>
      <ul>
        <% @movie.errors.each do |column, message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
      <p>Please edit your entries and try again.</p>
    </section>
  <% end %>
  
  <section>
    <%= form_for @movie, url: movies_create_path, method: :post do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :director %>
      <%= f.text_field :director %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit %>

    <% end %>
  </section>
</article>
