<main class="new-main">
  <article>
    <h3>New Movie</h3>

    <%= form_for @movie do |f| %>
      <p class="small-11"><%= f.label :title, "Title:" %>
      <%= f.text_field :title %></p>

      <p class="small-11"><%= f.label :director, "Directed by:" %>
      <%= f.text_field :director %></p>

      <p class="small-11"><%= f.label :description, "Description:" %>
      <%= f.text_field :description %></p>

      <p><%= f.submit "Save" %></p>
    <% end %>
  </article>
</main>
