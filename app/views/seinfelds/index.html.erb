<h1>Media Ranker Seinfeld Episodes</h1>

<main>
  <% @seinfelds.each do |seinfeld| %>
    <article class="one-seinfeld row">
      <h4 class="small-10 medium-7 column"><%= link_to seinfeld.title, seinfeld_path(seinfeld.id) %></h4>
      <p class="small-2 medium-2 column right-padding"> Votes: <%= seinfeld.rank %></p>
    </article>
  <% end %>
</main>

<p class="new_button"><%= button_to "Add New Seinfeld Episode", {controller: 'seinfelds', action: 'new'}, {path: 'new_seinfeld', method: :get} %></p>
<p class="media_button"><%= button_to "View All Media", {controller: 'landings', action: 'index'}, {path: 'landings', method: :get} %></p>
