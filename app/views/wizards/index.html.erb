<% @wizards.each do |wizard| %>
<table>
  <tr>
    <td><%= link_to( wizard.title, show_wizard_path(wizard.id) ) %></td>
    <td><%= button_to 'upvote', upvote_wizard_path(wizard), method: :post %></td>
    <td><%= pluralize(wizard.wizard_votes.count, "vote") %></td>
  </tr>
</table>
<% end %>

<p><%= link_to( 'create a new magical story', new_wizard_path ) %></p>
