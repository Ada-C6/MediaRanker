<div class="row small-up-1 medium-up-2 large-up-3">  <article class ="column">
    <div class="index_media">
      <h2>Top Books</h2>
      <table>
        <% @books.order('rank DESC').each do |book| %>
          <tr>
            <td><%= link_to book.title, book_show_path(book.id) %></td>
            <td class="index_rank">Ranked: <%= book.rank %></td>
          </tr>
        <% end %>
      </table>
      <%= link_to 'See all Books', book_index_path %>
    </div>
  </article>

  <article class ="column">
      <div class="index_media">
        <h2>Top Movies</h2>
        <table>
          <% @movies.order('rank DESC').each do |movie| %>
            <tr>
              <td><%= link_to movie.title, movie_show_path(movie.id) %></td>
              <td class="index_rank">Ranked: <%= movie.rank %></td>
            </tr>
          <% end %>
        </table>
        <%= link_to 'See all Movies', movie_index_path %>
      </div>
    </article>

  <article class ="column">
        <div class="index_media">
          <h2>Top Albums</h2>
          <table>
            <% @albums.order('rank DESC').each do |album| %>
              <tr>
                <td><%= link_to album.title, album_show_path(album.id) %></td>
                <td class="index_rank">Ranked: <%= album.rank %></td>
              </tr>
            <% end %>
          </table>
          <%= link_to 'See all Albums', album_index_path %>
        </div>
      </article>
</div>


