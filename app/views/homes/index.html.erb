<!-- Note: I preferred the media sections being displayed vertically, rather than
horizontally :)  -->

<section class="index_media">
  <h2>Top Books</h2>
  <table>
  <% @books.order('rank DESC').each do |book| %>
      <tr>
        <td><%= link_to book.title, book_show_path(book.id) %></td>
        <td id="index_rank">Ranked: <%= book.rank %> </td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'See all Books', book_index_path %>
</section>

