<h2>Top Books</h2>
<table>
<% @books.order('rank DESC').each do |book| %>
    <tr>
      <td><%= link_to book.title, book_show_path(book.id) %></td>
      <td>Ranked: <%= book.rank %> </td>
    </tr>
  <% end %>
</table>
<%= link_to 'See all Books', book_index_path %>

