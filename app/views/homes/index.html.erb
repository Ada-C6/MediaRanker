<h1>THIS IS MY HOMEPAGE</h1>

<table>
  <tr>
    <th>Top Movies</th>
    <th>Top Books</th>
    <th>Top Albums</th>
  </tr>

  <% 10.times do |i| %>
  <tr>
    <td><%= link_to "#{@movies[i].name}", movie_path(@movies[i].id)%></br>Ranked: <%= @movies[i].ranked %></td>
    <td><%= link_to "#{@books[i].name}", book_path(@books[i].id)%></br>Ranked: <%= @books[i].ranked %></td>
    <td><%= link_to "#{@albums[i].name}", album_path(@albums[i].id)%></br>Ranked: <%= @albums[i].ranked %></td>
  </tr>
  <% end %>

  <tr>
    <td><%= link_to "View More Movies", movies_path %></td>
    <td><%= link_to "View More Books", books_path %></td>
    <td><%= link_to "View More Albums", albums_path %></td>
  </tr>
</table>
