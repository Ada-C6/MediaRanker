
<h2><%= @name %></h2>
<h4>Votes: <%= @votes %></h4>
<h5>Created by: <%= @creator %></h5>

<p>
  <%= @description %>
</p>

<%= button_to("Upvote", {action: "upvote"}, {method: :patch}) %>

<%= button_to("Edit", {action: "edit"}, {method: :get}) %>

<%= button_to("Delete", {action: "destroy", id: params[:id]}, {method: :delete, data: {confirm: "are you sure?"}}) %>

<%= button_to("View all #{params[:controller]}", {action: "index"}, {method: :get}) %>

<%= button_to("View all media", "/", {method: :get} ) %>
