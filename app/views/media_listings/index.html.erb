<%= @media_listings.first.type %>

<main>
  <section>
    <h2>Intro</h2>
  </section>
  <section>
    <table>
      <thead>
        <tr>
          <th scope="col">Ranking</th>
          <th scope="col">Name</th>
          <th scope="col">Upvote</th>
        </tr>
      </thead>

      <tbody>
        <% # @todo rank all the media_listings for ranking before listing them %>
        <% @media_listings.order(:ranking).reverse.each do |listing| %>
        <tr>
          <td scope="row">
            <%= "Ranked: #{listing.ranking}" %>
          </td>
          <td>
            <%= link_to "#{listing.name}", media_listing_route(listing) %>
          </td>
          <td>
            <%= render partial: "upvote", locals: { media_listing: listing } %>
          </td>

        </tr>
        <% end %>
      </tbody>

    </table>
  </section>
</main>


<p>This is the /index.html.erb page for each all media listings</p>
