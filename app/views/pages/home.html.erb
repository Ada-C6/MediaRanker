<article class="center-this">

<div class="row">
  <div class="category small-12 medium-4 large-4 columns">
    <h3>Top Movies</h3>
    <ul>
      <% @top_movies.each do |movie| %>
        <li><%= link_to movie.title, movie_path(movie.id) %>
        <span class="ranking">Votes: <%= movie.num_votes %></span>
        </li>
      <% end %>
    </ul>
    <div class="view-more"><%= link_to "View More Movies", movies_path %></div>
  </div>

  <div class="category small-12 medium-4 large-4 columns">
    <h3>Top Books</h3>
    <ul>
      <% @top_books.each do |book| %>
        <li><%= link_to book.title, book_path(book.id) %>
        <span class="ranking">Votes: <%= book.num_votes %></span>
        </li>
      <% end %>
    </ul>
    <div class="view-more"><%= link_to "View More Books", books_path %></div>
  </div>

  <div class="category small-12 medium-4 large-4 columns">
    <h3>Top Albums</h3>
    <ul>
      <% @top_albums.each do |album| %>
        <li><%= link_to album.title, album_path(album.id) %>
        <span class="ranking">Votes: <%= album.num_votes %></span>
        </li>
      <% end %>
    </ul>
    <div class="view-more"><%= link_to "View More Albums", albums_path %></div>
  </div>
</div>

</article>
