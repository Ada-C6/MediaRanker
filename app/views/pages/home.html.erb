<section>
  <h1>Top Movies</h1>
  <ul>
    <% @top_movies.each do |movie| %>
      <li><%= link_to movie.title, movie_path(movie.id) %>
      Ranked: <%= movie.num_votes %>
      </li>
    <% end %>
  </ul>
  <%= link_to "View More Movies", movies_path %>
</section>

