      <td>
        <%= button_to "⬆", vote_book_path(book, vote: "up"), controller: :books, action: :vote, method: :patch %>
        <%= button_to "⬇", vote_book_path(book, vote: "down"), controller: :books, action: :vote, method: :patch %>
      </td>
      <td><%= "#{book.rank_points}" %></td>
      <td><%= "#{book.name}" %></td>
    </tr>
    <% end %>

    <tr>
      <td colspan="3"><h6><%= link_to "More Books...", books_path %></h6></td>
    </tr>
  </table>

  <table class="column">
    <tr>
      <th colspan="3"><h5>Movies</h5></th>
    </tr>

    <tr>
      <td colspan="3"><h6><%= link_to "Submit a new movie for voting", new_movie_path %></h6></td>
    </tr>

    <% @movies.each do |movie| %>
    <tr>
      <td>
        <%= button_to "⬆", vote_movie_path(movie, vote: "up"), controller: :movies, action: :vote, method: :patch %>
        <%= button_to "⬇", vote_movie_path(movie, vote: "down"), controller: :movies, action: :vote, method: :patch %>
      </td>
      <td><%= "#{movie.rank_points}" %></td>
      <td><%= "#{movie.name}" %></td>
    </tr>
    <% end %>

    <tr>
      <td colspan="3"><h6><%= link_to "More Movies...", movies_path %></h6></td>
    </tr>
  </table>

</section>
