
<table>
  <tr>
    <th>Top Movies</th>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to "#{movie.name}", movie_path(movie) %></td>
    <td>Ranked: <%=  movie.ranking %></td>
  </tr>
  <% end %>
  <tr>
    <td><%= link_to "View More Movies", movies_path %> </td>
  </tr>
</table>


