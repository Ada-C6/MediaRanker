<div class="row small-up-1 large-up-3">

  <table class="column">
    <tr>
      <th>Top Movies</th>
    </tr>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to "#{movie.name}", movie_path(movie) %> <small>Ranked: <%=  movie.ranking %></small></td>

    </tr>
    <% end %>
    <tr>
      <th><%= link_to "View More Movies", movies_path %> </th>
    </tr>
  </table>

  <table class="column">
    <tr>
      <th>Top Books</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to "#{book.name}", book_path(book) %><small>Ranked: <%=  book.ranking %></small></td>
    </tr>
    <% end %>
    <tr>
      <th><%= link_to "View More Books", books_path %> </th>
    </tr>
  </table>

  <table class="column">
    <tr>
      <th>Top Albums</th>
    </tr>
    <% @albums.each do |album| %>
    <tr>
      <td><%= link_to "#{album.name}", album_path(album) %><small> Ranked: <%=  album.ranking %></small></td>
    </tr>
    <% end %>
    <tr>
      <th><%= link_to "View More Albums", albums_path %> </th>
    </tr>
  </table>
</div>
