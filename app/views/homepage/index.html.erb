<h2>Top Five For All Categories</h2>

<table class="index-table">
  <tr>
    <th colspan="3">Albums</th>
    <th colspan="3">Books</th>
    <th colspan="3">Movies</th>
  </tr>

  <tr>
    <td colspan="3"><h6><%= link_to "Submit a new album for voting", new_album_path %></h6></td>
    <td colspan="3"><h6><%= link_to "Submit a new book for voting", new_book_path %></h6></td>
    <td colspan="3"><h6><%= link_to "Submit a new movie for voting", new_movie_path %></h6></td>
  </tr>

  <% 5.times do |i| %>
  <tr>
    <td><%= button_to "Upvote", upvote_album_path(@albums[i]), contoller: :albums, action: :upvote, method: :patch %> </td>
    <td><%= "#{@albums[i].rank_points}" %></td>
    <td><%= "#{@albums[i].name}" %></td>

    <td><%= button_to "Upvote", upvote_book_path(@books[i]), contoller: :books, action: :upvote, method: :patch %> </td>
    <td><%= "#{@books[i].rank_points}" %></td>
    <td><%= "#{@books[i].name}" %></td>

    <td><%= button_to "Upvote", upvote_movie_path(@movies[i]), contoller: :movies, action: :upvote, method: :patch %> </td>
    <td><%= "#{@movies[i].rank_points}" %></td>
    <td><%= "#{@movies[i].name}" %></td>
  </tr>
  <% end %>

  <tr>
    <td colspan="3"><%= link_to "More Albums...", albums_path %></td>
    <td colspan="3"><%= link_to "More Books...", books_path %></td>
    <td colspan="3"><%= link_to "More Movies...", movies_path %></td>
  </tr>
</table>
