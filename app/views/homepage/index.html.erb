<h2>Top Five For All Categories</h2>

<section class="row small-up-1 medium-up-3 large-up-3">

  <table class="column">
    <tr>
      <th colspan="3"><h5>Albums</h5></th>
    </tr>

    <tr>
      <td colspan="3"><h6><%= link_to "Submit a new album for voting", new_album_path %></h6></td>
    </tr>

    <% @albums.each do |album| %>
    <tr>
      <td>
        <%= button_to "⬆", vote_album_path(album, vote: "up"), controller: :albums, action: :vote, method: :patch %>
        <%= button_to "⬇", vote_album_path(album, vote: "down"), controller: :albums, action: :vote, method: :patch %>
      </td>
      <td><%= "#{album.rank_points}" %></td>
      <td><%= "#{album.name}" %></td>
    </tr>
    <% end %>

    <tr>
      <td colspan="3"><h6><%= link_to "More Albums...", albums_path %></h6></td>
    </tr>
  </table>

  <table class="column">
    <tr>
      <th colspan="3"><h5>Books</h5></th>
    </tr>

    <tr>
      <td colspan="3"><h6><%= link_to "Submit a new book for voting", new_book_path %></h6></td>
    </tr>

    <% @books.each do |book| %>
