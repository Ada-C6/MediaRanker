<h3 ><%= title %></h3>

<div class="row">
  <div class="small-4 medium-3 large-2 columns">
    Ranking
  </div>
  <div class="small-4 medium-3 large-2 columns">
    Title
  </div>
  <div class="small-4 medium-3 large-2 columns end">
    Upvote
  </div>
</div>

<% items.each do |item| %>
<div class="row">
  <div class="column small-4 medium-3 large-2">
    <%= "Ranked: #{item.vote}" %>
  </div>
  <div class="column small-4 medium-3 large-2">
    <%= link_to "#{item.title}", item %>
  </div>
  <div class="column small-4 medium-3 large-2 end">
    <%= form_for item, method: :patch do |f|%>
      <%= f.hidden_field :vote, :value => item.upvote %>
      <%= f.submit "Upvote!" %>
    <% end %>
  </div>

</div>

<% end %>
