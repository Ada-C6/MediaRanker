<h3><%= title %></h3>


<table>
  <tbody>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Title
      </th>
      <th>
        Upvote
      </th>
    </tr>

      <% items.each do |item| %>
      <tr>
        <th>
          <%= "Ranked: #{item.vote}" %>
        </th>
        <th>
          <%= link_to "#{item.title}", item %>
        </th>
        <th>
          <%= form_for item, method: :patch do |f|%>
            <%= f.hidden_field :vote, :value => item.upvote %>
            <%= f.submit "Upvote!" %>
          <% end %>
        </th>
      </tr>
      <% end %>
    </tbody>
</table>
