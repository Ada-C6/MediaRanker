<h3><%= title %></h3>


<table>
  <tbody>
    <tr class="row small-up-3 medium-up-3 large-up-3">
      <th class="column">
        Ranking
      </th>
      <th class="column">
        Title
      </th>
      <th class="column">
        Upvote
      </th>
    </tr>

      <% items.each do |item| %>
      <tr class="row small-up-3 medium-up-3 large-up-3">
        <th class="column">
          <%= "Ranked: #{item.vote}" %>
        </th>
        <th class="column">
          <%= link_to "#{item.title}", item %>
        </th>
        <th class="column">
          <%= form_for item, method: :patch do |f|%>
            <%= f.hidden_field :vote, :value => item.upvote %>
            <%= f.submit "Upvote!" %>
          <% end %>
        </th>
      </tr>
      <% end %>
    </tbody>
</table>
