
<main>
  <section>
    <div class="row">
      <h2 class="small-12 large-6 columns"><%= @name %></h2>
      <h3 class="small-12 large-6 columns">By: <%=@person%></h3>
    </div>
    <div class="row">
      <h4 class="small-12">Rank: <%=@this_item.rank%></h4>
      <p class="small-12"><%=@description%></p>
      <p class="small-12"><%= button_to "Vote", @show, method: :patch %><p>
    </div>
  </section>

  <ul class="row">
    <li class="small-6 medium-3 columns" class = "button"><%=link_to "Edit", @edit%></li>
    <li class="small-6 medium-3 columns" class = "button"><%= link_to "Delete", @delete,  method: :delete , data: {confirm: "Are you reallysure?"}%></li>
    <li class="small-6 medium-3 columns" class = "button"><%=link_to "View all",@index%></li>
    <li class="small-6 medium-3 columns" class = "button"><%=link_to "View all Media",@root%></li>
  <ul>
</main>
