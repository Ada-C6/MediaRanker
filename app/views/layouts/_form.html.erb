<main>
  <h2><%= "Add new #{media.class}" %></h2>

  <% if media.errors.any? %>
  <ul class="errors">
    <% media.errors.each do |column, message| %>
    <li>
      <strong>
        <%= column.capitalize %>
      </strong> <%= message %>
    </li>
    <% end %>
  </ul>
  <% end %>

  <%= form_for media, method: http_verb do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :by %>
  <%= f.text_field :by %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Submit", class: "success button" %>
  <% end %>
</main>
