<% if media.errors.any? %>
  <ul class="errors">
    <% media.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for media, method: http_method do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<% if media.class == Movie %>
  <%= f.label :director %>
  <%= f.text_field :director %>
<% elsif media.class == Book %>
  <%= f.label :author %>
  <%= f.text_field :author %>
<% elsif media.class == Album %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
<% end %>


<%= f.label :description %>
<%= f.text_field :description %>

<%= f.submit "Submit!"%>
<% end %>
