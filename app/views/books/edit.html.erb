<h2>Edit a book</h2>

<section>
  <%= form_for @book, url: books_update_path, method: :put do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>

  <% end %>
</section>
