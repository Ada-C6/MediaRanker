<h2>Edit Book</h2>

<%= form_for @this_item, :url => { method: :patch} do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :author %>
<%= f.text_field :author %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.hidden_field :rank, :value => 0 %>

  <%= f.submit "Submit" %>
<% end %>
