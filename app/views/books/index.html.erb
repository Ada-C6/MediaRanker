<h1> Books</h1>
<table>
	<tbody>
		<tr>
			<th>Ranking</th>
			<th>Name</th>
			<th>Upvote</th>
			<th>Downvote</th>
		</tr>
		<% @all_books.each do |book|%>
		<tr>
			<td>Rank: <%=book.rank%></td>
			<td><%=link_to book.name, book_path(book)%></td>
			<td><%= button_to("Upvote", {action: "upvote", id: book.id}, {method: :patch, :class=> "success button"}) %></td>
			<td><%= button_to("Downvote", {action: "downvote", id: book.id}, {method: :patch, :class=> "alert button"}) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= button_to("View All Media", media_path, {method: :get, :class=>"button"}) %>
<%= button_to("Add a Book", new_book_path, {method: :get, :class=>"button"}) %>
