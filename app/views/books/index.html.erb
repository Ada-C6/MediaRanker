<h1>Media Ranker Books</h1>

<main>
  <% @books.each do |book| %>
    <article class="one-book">
      <h4><%= link_to book.title, book_path(book.id) %></h4>
      <p> Votes: <%= book.rank %></p>
    </article>
  <% end %>
</main>

<p class="new_button"><%= button_to "Add New Book", {controller: 'books', action: 'new'}, {path: 'new_book', method: :get} %></p>
<p class="media_button"><%= button_to "View All Media", {controller: 'landings', action: 'index'}, {path: 'landings', method: :get} %></p>
