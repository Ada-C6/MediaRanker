<main>
  <table>
    <thead>
      <tr>
        <th scope="col">Ranking</th>
        <th scope="col">Book</th>
        <th scope="col">Upvote</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>

        <td>
          <%= ranking(book) %>
        </td>

        <td scope="row">
          <%= link_to "#{book.title}", book_path(book) %>
        </td>


        <td>
          <%= link_to "Upvote", upvote_book_path(book), method: "patch", class: "success small button" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</main>

<footer>
  <ul class="menu row">
    <li class="small-10 medium-5 large-5 columns"><%= link_to "Add New Book", new_book_path, class: "button" %></li>
    <li class="small-10 medium-5 large-5 end columns"><%= link_to "All Media", root_path, class: "secondary button" %></li>
  </ul>
</footer>
