<section class="hero hero3">
       <a name="top-books"></a>
        <div class="wrapper row">
          <div class="small-10 medium-6 large-3 columns">
            <h1> Top Books </h1>
            <p>
              Swag pork belly brunch gluten-free kinfolk before they sold out asymmetrical. Thundercats pug poke, cornhole subway tile skateboard tote bag seitan. Before they sold out artisan vegan, raclette roof party iceland viral 8-bit. Intelligentsia yr 3 wolf moon +1 helvetica
              <%= button_to 'Add a Book', new_book_path, :class => "button", method: :get %>
            </p>
          </div>
        </div>
 </section>

<table>
  <tr class="align-header">
    <th>Ranking</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>

<% @books.each do |book| %>

  <tr>
    <td>Ranked: <%= book.ranked %></td>
    <td><%= link_to(book.title, book_path(book.id)) %></td>
    <td><%= button_to "Upvote", book_path(book.id), :class => "button", method: :get %></td>
  </tr>
<% end %>
</table>
