<h2>Books Index</h2>

<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote  </th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td>Ranked: <%= book.ranked %></td>
    <td><%= link_to "#{book.name}", book_path(book.id) %></td>
    <td><%= button_to "Upvote", upvote_book_path(book.id), :method => :patch %></td>
  </tr>
  <% end %>
</table>

<ul>
  <li><%= link_to "View All Media", home_path %></li>
  <li><%= link_to "Add a Book", new_book_path %></li>
</ul>
