<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<article>
  <h1>ranking</h1> <h1>name</h1> <h1>upvote</h1>
  <% @books.each do |book| %>
  <p>
    ranked: <%=book.votes%>
  </p>
  <p>
    <%= link_to "#{book.name}", book_path(book.id) %>
  </p>
  <p>
    <%= button_to 'upvote', {action: "upvote", id: book.id }, method: :patch %>
  </p>
  <% end %>
  <p>
    <%= link_to 'Media Ranker', root_path %>
  </p>
  <p>
    <%= link_to 'add new', new_book_path %>
  </p>
</article>
