<div class ="row">
  <div class="small-up-12 medium-up-12 large-up-12">
    <section>
      <table>
        <th>Ranking</th>
        <th>Name</th>
        <th>Upvote</th>
        <% @books.each do |book| %>
        <tr>
          <td>Ranked: <%= book.ranking %></td>
          <td><%= link_to(book.name, book_path(book.id)) %></td>
          <td><%= link_to("Upvote", book_upvote_path(book.id), method: :patch, class: "button secondary radius") %></td>
        </tr>
        <% end %>
      </table>
      <%= link_to("View All Media", root_path, method: :get, class: "button secondary radius") %> <%= link_to("Add a Book", new_book_path, method: :get, class: "button secondary radius") %>
    </section>
  </div>
</div>
