<section>
  <tr>
    <th>Ranking</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= "Ranked: #{book.rank}" %></td>
    <td><%= link_to book.title, show_books_path(book.id)%></td>
    <td><%= button_to "Upvote", upvote_books_path(id: book.id), method: :patch, class: 'btn' %></td>
  </tr>
  <% end %>

  <%= button_to "View All Media", index_path, method: :get %>
  <%= button_to "Add A Book", new_books_path, method: :get %>

</section>
