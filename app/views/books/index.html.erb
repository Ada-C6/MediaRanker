<main>
  <div>
    <ul class="row small-up-3">
      <li class="column">Rank</li>
      <li class="column">Title</li>
      <li class="column">Upvote</li>
    </ul>
  </div>

  <div class="index-list">
    <ul class="row small-up-3">
      <% @books.each do |book| %>
        <li class="column"><%= "#{book.rank}" %></li>
        <li class="column"><%= link_to("#{book.title}", book_path(book)) %></li>
        <li class="column"><%= button_to("Upvote", book_upvote_path(book), method: :patch) %></li>
      <% end %>
    </ul>
  </div>

  <nav>
    <p><%= button_to("View all media", root_path, method: :get) %></p>
    <p><%= button_to("Add a book", new_book_path, method: :get) %></p>
  </nav>
</main>
