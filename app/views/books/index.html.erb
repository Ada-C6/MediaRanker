<h1>All Books</h1>

<table>
  <tbody>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Title
      </th>
      <th>
        Upvote
      </th>
    </tr>

      <% @books.each do |book| %>
      <tr>
        <th>
          <%= "Ranked: #{book.vote}" %>
        </th>
        <th>
          <%= link_to "#{book.title}", book_path(book) %>
        </th>
        <th>
          <%= "Upvote button here" %>
        </th>
      </tr>
      <% end %>
    </tbody>
</table>

<h4><%= link_to "Add a new book", new_book_path %></h4>
<h4><%= link_to "Home", root_path %></h4>
