<table>
  <tr>
    <th>Ranking</th>
    <th>Title</th>
    <th>Upvote</th>
  </tr>

<% @books.each do |book| %>

  <tr>
    <td>Ranked: <%= book.ranked %></td>
    <td><%= link_to(book.title, book_path(book.id)) %></td>
    <td><%= button_to "Upvote", book_path(book.id), method: :get %></td>
  </tr>
  </table>

<% end %>

<ul>
  <li><%= button_to 'View All Media', root_path, method: :get %> </li>
  <li><%= button_to 'Add a Book', new_book_path, method: :get %> </li>
</ul>
