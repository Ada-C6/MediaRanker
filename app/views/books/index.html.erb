<table>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>Ranked: <%= book.rank %></td>
    <td><%= link_to(book.name, book_path(book.id)) %></td>
    <td>
      <%= form_tag books_upvote_path(book.id), class: "edit_books", method: :put do %>
        <%= submit_tag "Upvote", class: "upvote_button" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to("View All Media", root_path) %>
<%= link_to("Add a Book", new_book_path) %>
