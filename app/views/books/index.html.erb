<main>

  <table>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.score %>
      </td>
      <td>
        <%= book.name %>
      </td>
      <td>
        <%= button_to "Upvote", upvote_book_path(book), method: :patch %>
      </td>
    </tr>
    <% end %>

  </table>

</main>
