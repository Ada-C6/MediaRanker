<div class="row">
  <section>
    <table>
      <tr>
        <th scope="column">Ranking</th>
        <th scope="column">Title</th>
        <th scope="column">Upvote</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= "Ranked: #{book.rank}" %></td>
        <td><%= link_to book.title, show_books_path(book.id)%></td>
        <td><%= button_to "Upvote", upvote_books_path(id: book.id), method: :patch, class: 'button radius' %></td>
      </tr>
      <% end %>
    </table>
      <%= button_to "View All Media", root_path, method: :get, class: 'button secondary' %>
      <%= button_to "Add A Book", new_books_path, method: :get, class: 'button secondary' %>
  </section>
</div>
