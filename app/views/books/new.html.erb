<h2>Add a new book</h2>

<section>
  <%= form_for @book, url: books_create_path, method: :post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>

  <% end %>
</section>
