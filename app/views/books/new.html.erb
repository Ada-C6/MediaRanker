<h2>Add a new book</h2>

<article>
  <% if @book.errors.any? %>
    <section class = "errors">
      <p>Whoops! We couldn't save your book because:</p>
      <ul>
        <% @book.errors.each do |column, message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
      <p>Please edit your entries and try again.</p>
    </section>
  <% end %>
  
  <section>
    <%= form_for @book, url: books_create_path, method: :post do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit %>

    <% end %>
  </section>
</article>
