
<div class="form-new">
<h1>Add a New Book</h1>
<%= form_for (@book) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name%>
    <p></p>
    <%= f.label :author %>
    <%= f.text_field :author%>
    <p></p>
    <%= f.label :description %>
    <%= f.text_area :description%>
    <p></p>

    <%= f.submit %>
  <%end%>
</div>
