<% if @book.errors.any? %>
  <ul class="error">
    <% @book.errors.each do |error, message| %>
    <li><strong><%= error.upcase %></strong><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @book, url: path, method: http_method do |f| %>
<table>
  <tr>
    <td><%= f.label :name %> </td>
    <td><%= f.text_field :name, :size => 100 %> </td>
  </tr>

  <tr>
    <td><%= f.label :author %></td>
    <td><%= f.text_field :author %></td>
  </tr>

  <tr>
    <td><%= f.label :description %></td>
    <td><%= f.text_field :description %></td>
  </tr>

  <tr>
    <td><%= f.submit "Create Book" %></td>
  </tr>
</table>
<% end %>
