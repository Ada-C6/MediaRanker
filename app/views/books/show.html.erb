<h1><%=@this_book.name%></h1>
<h2>Written By: <%= @this_book.author %></h2>
<h4>Rank: <%=@this_book.rank%></h4>
<p><%=@this_book.description%></p>

<ul class="button-group">
	<li><%= button_to("Upvote", {action: "upvote", id: @this_book.id}, {method: :patch, :class=> "button success"}) %></li>
	<li><%= button_to("Downvote", {action: "downvote", id: @this_book.id}, {method: :patch, :class=> "button alert"}) %></li>
</ul>
<ul class="button-group">
	<li><%= button_to("Edit", {action: "edit", id: @this_book.id}, {method: :get, :class=> "button"}) %></li>
	<li><%= button_to("Delete", {action: "destroy", id: @this_book.id}, {method: :delete, :class=> "button", data: {confirm:  "are you sure?"}}) %></li>
	<li><%= button_to("View All Books", {action: "index"}, {method: :get, :class=> "button"}) %></li>
	<li><%= button_to("View All Media", media_path, {method: :get, :class=> "button"}) %></li>
</ul>




