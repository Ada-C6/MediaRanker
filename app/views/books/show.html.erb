<section class="background_books">
  <h3><%= @mybook.title %></h3>
  <h4><%= @mybook.creator %></h4>
  <p>Description-</p>
  <p><%= @mybook.description %></p>
  <%= button_to("Edit book", edit_book_path(@mybook.id), method: :get, class:"secondary button")%>
  <%= button_to("Delete book", book_path(@mybook.id), method: :delete, class:"alert button")%>
  <p><%= button_to('View All Books', books_path, method: :get, class:"secondary button") %></p>
  <p><%= button_to('View All Media', media_path, method: :get, class:"secondary button") %></p>
  <p><%= button_to 'UpVote', upvote_book_path(@mybook.id), method: :post, class:"success button" %></p>
  <p>Rank: <%= @mybook.rank %></p>
</section>
