<main>
  <h2>
    <%= @book.title %>
    <small>by <%= @book.author %></small>
  </h2>

  <p>Upvotes: <%= ranking(@book) %></p>
  <p>Description: <%= @book.description %></p>
</main>

<footer class="small-12 large-12 columns">
  <ul class="menu row small-up-1 medium-up-3 large-up-6">
    <li class="column">
      <%= link_to "Upvote", upvote_book_path(@book), method: "patch", class: "success button" %>
    </li>

    <li class="column">
      <%= link_to "Edit Book", edit_book_path, class: "warning button" %>
    </li>

    <li class="column">
      <%= link_to "Delete", book_path,
                method: "delete",
                data: { confirm: "Are you sure you want to delete this book?" },
                class: "alert button" %>
    </li>

    <li class="column">
      <%= link_to "All Books", books_path, class: "button" %>
    </li>

    <li class="column">
      <%= link_to "All Media", root_path, class: "secondary button" %>
    </li>
  </ul>
</footer>
