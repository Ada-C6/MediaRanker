<article class="show_media">
  <h1><%= @book.name %></h1>
  <p><%= "Written by: #{ @book.author }" %></p>
  <p><%= "Ranked: #{ @book.ranking }" %></p>
  <p><%= "Description: #{ @book.description }" %></p>
  <p><%= link_to "Upvote", upvote_book_path(@book), method: :patch %></p>
  <p><%= link_to "Edit", edit_book_path(@book) %></p>
  <p><%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %></p>
  <p><%= link_to "View All Movies", books_path %></p>
  <p><%= link_to "View All Media", root_path %></p>
</article>
