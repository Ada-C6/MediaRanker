<h3><%= "#{@book.title}" %></h3>
<h4><%= "Written by #{@book.author}" %></h4>
<p>
  <%= "#{@book.description}" %>
</p>
<p>
  <%= "Ranked: #{@book.vote}" %>
</p>


<%= form_for @book, method: :patch do |f|%>
  <%= f.hidden_field :vote, :value => @book.upvote %>
  <%= f.submit "Upvote!" %>
<% end %>

<div class="row">
<p class="column small-12 medium-2 large-2">
<%= link_to "Edit Book", edit_book_path %>
</p>
<p class="column small-12 medium-2 large-2">
<%= link_to "Delete this book!", book_path(@book), :method =>'delete', data: { confirm: "Are you really sure?"} %>
</p>
<p class="column small-12 medium-2 large-2">
<%= link_to "Home", root_path %>
</p>
<p class="column small-12 medium-2 large-2 end">
<%= link_to "All Books", books_path %>
</p>
</div>
