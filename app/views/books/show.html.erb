<article class="show_media">
  <h1><%= @book.name %></h1>
  <p><%= "Written by: #{ @book.author }" %></p>
  <p><%= "Ranked: #{ @book.ranking }" %></p>
  <p><%= "Description: #{ @book.description }" %></p>

  <section>
    <div class="button upvote"><%= link_to "Upvote", upvote_book_path(@book), method: :patch %></div>
    <div class="button"><%= link_to "Edit", edit_book_path(@book) %></div>
    <div class="button delete"><%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %></div>
  </section>

  <section>
    <div class="button"><%= link_to "View All Books", books_path %></div>
    <div class="button"><%= link_to "View All Media", root_path %></div>
  </section>
</article>
