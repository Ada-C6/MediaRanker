<h2>Detailed Book Info</h2>

<table class="index-table">
  <tr>
    <th>Points</th>
    <th>Book Name</th>
    <th>Book Author</th>
    <th>Book Description</th>
    <th>Actions</th>
  </tr>
  <tr>
    <td><%= "#{@book.rank_points}" %></td>
    <td><%= "#{@book.name}" %></td>
    <td><%= "#{@book.author}" %></td>
    <td><%= "#{@book.description}" %></td>
    <td><small>
      <%= link_to "[Edit]", edit_book_path(@book) %>
      <%= link_to "[Delete]", book_path(@book), method: :delete, data: { confirm: "Really, now?" } %></small> </td>
  </tr>
</table>

<div class="row">
<%= link_to root_path do%>
  <div class="button even-2"><h5>Go back home</h5></div>
<% end %>
<%= link_to books_path do%>
  <div class="button even-2"><h5>Go back to all books</h5></div>
<% end %>
</div>
