<h1><%= @book.title %></h1>
<h2> By: <%= @book.author %></h2>
<p><%= @book.description %></p>
<p>Rank: <%= @book.rank %></p>

<p>
  <%= button_to "Upvote",   upvote_book_path(@book), method: :patch %>
</p>
<p>
  <%= button_to "Edit Book",   edit_book_path(@book), method: :get %>
</p>
<p>
  <%= button_to "Delete Book",   book_path(@book), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>
</p>

<section class="sub-nav">
  <ul>
    <li>
      <%= link_to "Back to all Books", books_path %>
    </li>
    <li>
      <%# link_to "Back to MediaRanker Home", root_path %>
    </li>
  </ul>
</section>
