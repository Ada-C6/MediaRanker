
<%= form_for @book do |f| %>
  <div class="row">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="row">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="row">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="row">
    <%= f.submit action_name, :class => "normal-button" %>
  </div>
<% end %>
