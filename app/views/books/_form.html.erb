<% if @book.errors.any? %>
<ul>
  <% @book.errors.each do |column, message| %>
  <li>
    <%= column %>
    <%= message %>
  </li>
  <% end %>
</ul>
<% end %>

<%= form_for @book, method: action_name do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :author %>
<%= f.text_field :author %>
<%= f.label :description %>
<%= f.text_field :description %>

<%= f.submit "Commit Changes" %>
<% end %>
