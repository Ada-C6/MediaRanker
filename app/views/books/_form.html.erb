<%= form_for @book, url: local_url do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :author %>
        <%= f.text_field :author %>
    </p>

    <p>
        <%= f.label :description %>
        <%= f.text_area(:description, size:"100x6") %>
    </p>

    <p>
        <%= f.submit "Save" %>
    </p>
<% end %>
