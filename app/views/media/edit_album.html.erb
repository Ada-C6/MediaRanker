<section>
  <header>
    <h1>Edit Album</h1>
  </header>

    <article class="form">
    <%= form_for @medium, url: medium_update_path do |f| %>

      <ul>
        <li>
          <%= f.label "Name:" %>
          <%= f.text_field :name, :class => "name" %>
        </li>

        <li>
          <%= f.label "Artist:" %>
          <%= f.text_field :artist, :class => "artist" %>
        </li>

        <li>
          <%= f.label "Singer:" %>
          <%= f.text_field :singer, :class => "singer" %>
        </li>

        <li>
          <%= f.label "Description:" %>
          <%= f.text_field :description, :class => "description" %>
        </li>

      </ul>

      <%= f.submit 'Save'%>

    <% end %>
  </article>
</section>
