<h1 class="detail_title">
<%= @medium.name %>
</h1>

<h2>
  <% if @medium.singer != nil %>
    Recorded by: <%= @medium.singer %>
  <% end %>

  <% if @medium.artist != nil %>
    Recorded by: <%= @medium.artist %>
  <% end %>

  <% if @medium.director != nil %>
    Directed by: <%= @medium.director %>
  <% end %>

  <% if @medium.author != nil %>
    Written by: <%= @medium.author %>
  <% end %>
</h2>

<section class="detail_content">
  <p>Ranked: <%= @medium.votes %></p>
  <p><%= @medium.description %></p>
</section>

<section class="botton">
  <%= link_to "Upvote", medium_upvote_path(@medium.id) %>
  <%= link_to "Edit #{@medium.name}", medium_edit_path(@medium.id) %>
  <%= link_to "DELETE", medium_delete_path(@medium.id), data: { confirm: "Are you sure you want to delete this?" }, method: :delete %>
  <%= link_to "View All #{@medium.type}", media_all_path(@type) %>
  <%= link_to "View All Media", index_path %>
</section>
