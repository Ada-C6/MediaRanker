<article class="column">
	<h1>This One Medium</h1>
		<ul>
		<li>Rank: <%= @my_medium.votes.count %> </li>
		<li>Name: <%= @my_medium.title %></li>
		<li>Maker: <%= @my_medium.maker %></li>
		</ul>
		<p>Description: <%= @my_medium.description %></p>

		<ul class="row small-up-1 medium-up-4 large-up-6">
			<li class="column">
				<%= button_to("Upvote", upvote_path(@my_medium.id)) %>
			</li>
			<li class="column"><%= button_to("Downvote", downvote_path(@my_medium.id)) %></li>

		<!-- edit buttons -->
		<% if @my_medium.kind == 'album' %>
			<li class="column"><%= button_to("Edit Medium", edit_path(@my_medium.id), method: :get, action: :edit) %></li>
		<% elsif %>
			<% @my_medium.kind == 'book' %>
			<li class="column"><%= button_to("Edit Book", edit_path(@my_medium.id), method: :get, action: :edit) %></li>			
		<%else %>
			<% @my_medium.kind == 'movie' %>
			<li class="column"><%= button_to("Edit Movie", edit_path(@my_medium.id), method: :get, action: :edit) %></li>	
		<% end %>


		<!-- delete buttons -->
		<% if @my_medium.kind == 'album' %>		
		<li class="column"><%= button_to("Delete Album", delete_path(@my_medium.id), data: {confirm: "Are you sure you want to destroy this beautiful music?"}) %></li>
		<% elsif %>
			<% @my_medium.kind == 'book' %>
		<li class="column"><%= button_to("Delete Book", delete_path(@my_medium.id), data: {confirm: "Are you sure you want to destroy this beautiful writing?"}) %></li>
		<%else %>
			<% @my_medium.kind == 'movie' %>						
		<li class="column"><%= button_to("Delete Movie", delete_path(@my_medium.id), data: {confirm: "Are you sure you want to destroy this beautiful example of cinematography?"}) %></li>
	<% end %>

</article>
