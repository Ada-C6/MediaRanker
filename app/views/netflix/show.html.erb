<h1><%= @netflix[:name] %></h1>
<h3>Votes: <%= @netflix[:ranking] %></h3>
<p>Description: <%= @netflix[:description] %></p>
<%= button_to 'Upvote', netflixupvote_path(params[:id]), method: :post %>
<ul>
  <li><%= button_to 'Edit this suggestion', netflixedit_path(params[:id]), :class => "button", method: :get %></li>
  <li><%= button_to 'Delete this suggestion', netflixdestroy_path(params[:id]), :class => "button", method: :delete, data: {confirm: 'Are you sure you want to delete this suggestion? ðŸ˜³'} %></li>
  <li><%= button_to 'View all Netflix suggestions', netflixindex_path, :class => "button", method: :get %></li>
  <li><%= button_to "Home", homepageindex_path, :class => "button", method: :get %></li>
</ul>
