<main>
  <h2>
    <%= name_field %>
    <small>by <%= creator_field %></small>
  </h2>

  <p>Upvotes: <%= ranking(media) %></p>
  <p>Description: <%= media.description %></p>
</main>

<footer class="small-12 large-12 columns">
  <ul class="menu row small-up-1 medium-up-3 large-up-6">

    <li class="column">
      <%= link_to "Upvote", upvote_path, remote: true, method: "patch", class: "success button" %>
    </li>

    <li class="column">
      <%= link_to "Edit Album", edit_path, class: "warning button" %>
    </li>

    <li class="column">
      <%= link_to "Delete", show_path,
                method: "delete",
                data: { confirm: "Are you sure you want to delete this #{media_name}?" },
                class: "alert button" %>
    </li>

    <li class="column">
      <%= link_to "All #{media_name.capitalize}s", media_path, class: "button" %>
    </li>

    <li class="column">
      <%= link_to "All Media", root_path, class: "secondary button" %>
    </li>
  </ul>
</footer>
