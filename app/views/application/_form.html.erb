<section>
  <%= form_for media, method: http_method do |f| %>
    <% if media.errors.any? %>
      <div class="row small-6 large-6 end callout alert">
        <ul>
          <% media.errors.each do |column, message| %>
            <li>
              <strong><%= column.capitalize %></strong>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="small-10 medium-6 large-6 end">
      <p class="row">
        <%= f.label label_one %>
        <%= f.text_field label_one %>
      </p>

      <p class="row">
        <%= f.label label_two %>
        <%= f.text_field label_two %>
      </p>

      <p class="row">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </p>

      <%= f.submit "Submit", class: "success button" %>
    <% end %>
  </div>
</section>

<p class="menu">
  <%= link_to "All #{media_name}", media_path, class: "expanded secondary button" %>
</p>
